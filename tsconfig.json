{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    // CommonJS 환경
    "module": "commonjs",
    "target": "esnext",

    // JSON import 지원
    "resolveJsonModule": true,

    // Node.js 타입
    "types": ["node"],

    // 나머지 옵션
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
